1) Next Smaller Element

vector<int> nextSmallerElement(vector<int> &arr, int n)
{
    vector<int> ans(n);
   
    for(int i=0;i<n;i++){
      ans[i]=-1;
      
      for(int j=i+1;j<n;j++){
          if(arr[i]>arr[j]){
              ans[i]=arr[j];
              break;
          }
      }
    }

    return ans;
}


